<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:mode="twoLine"
    android:paddingEnd="?android:listPreferredItemPaddingRight"
    android:paddingStart="?android:listPreferredItemPaddingLeft">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dip"
        android:layout_toStartOf="@+id/level_icon"
        android:textAppearance="?android:attr/textAppearanceListItem" />

    <ImageView
        android:id="@id/level_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/name"
        android:contentDescription="@string/level_content_description" />

    <TextView
        android:id="@+id/club"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/start_date"
        android:layout_alignStart="@id/name"
        android:layout_below="@id/name"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@id/start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/club"
        android:layout_alignParentEnd="true"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
